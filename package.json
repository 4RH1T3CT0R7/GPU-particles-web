{
  "name": "GPU-particles-web",
  "version": "1.0.0",
  "description": "GPU particle system with WebGL2 and WebGPU ray tracing",
  "private": true,
  "scripts": {
    "build": "esbuild index.ts --bundle --outfile=dist/index.js --format=esm --sourcemap && esbuild index-webgpu.ts --bundle --outfile=dist/index-webgpu.js --format=esm --sourcemap",
    "build:watch": "npm run build -- --watch",
    "typecheck": "tsc --noEmit",
    "dev": "npm run build && python3 -m http.server 8080"
  },
  "devDependencies": {
    "@webgpu/types": "^0.1.69",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}
